<?xml version="1.0" encoding="UTF-8"?>
<!--Add salesperson in orderline - Fixed Layout-->
<templates id="template" xml:space="preserve">
    <t t-name="Orderline" t-inherit="point_of_sale.Orderline"
          t-inherit-mode="extension" owl="1">
        <xpath expr="//ul[hasclass('info-list')]" position="after">
            <!-- Salesperson Info - Clean Layout -->
            <div t-if="line.salesperson" class="orderline-salesperson-info">
                <span class="salesperson-label">SalesPerson:</span>
                <span class="salesperson-name" t-esc="line.salesperson"/>
            </div>
        </xpath>
    </t>
</templates>