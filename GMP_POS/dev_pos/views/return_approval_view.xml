<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_return_approval_tree" model="ir.ui.view">
        <field name="name">return.approval.tree</field>
        <field name="model">return.approval</field>
        <field name="arch" type="xml">
            <tree string="Return Approvals" 
                  decoration-warning="gm_status in ('waiting_approval_1', 'waiting_approval_2')"
                  decoration-success="gm_status == 'approved'"
                  decoration-danger="gm_status == 'rejected'">
                <field name="gm_doc_num" decoration-bf="1"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="gm_creation_date"/>
                <field name="gm_requested_by" widget="many2one_avatar_user"/>
                <field name="gm_pos_order_id"/>
                <field name="gm_currency_id" column_invisible="1"/>
                <field name="gm_total_amount" widget="monetary" sum="Total" options="{'currency_field': 'gm_currency_id'}"/>
                <field name="gm_current_level"/>
                <field name="gm_status" widget="badge" 
                       decoration-warning="gm_status in ('waiting_approval_1', 'waiting_approval_2')"
                       decoration-success="gm_status == 'approved'"
                       decoration-danger="gm_status == 'rejected'"/>
                <field name="gm_approval_date" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_return_approval_form" model="ir.ui.view">
        <field name="name">return.approval.form</field>
        <field name="model">return.approval</field>
        <field name="arch" type="xml">
            <form string="Return Approval">
                <header>
                    <!-- Removed Submit for Approval button - documents are created directly in waiting_approval_1 status -->
                    
                    <button name="%(action_return_approval_wizard)d" 
                            string="Approve (L2)" 
                            type="action" 
                            class="oe_highlight"
                            invisible="not gm_can_approve_level_2"
                            groups="dev_pos.group_return_approval_level_2"
                            context="{'default_action': 'approve', 'default_level': 2}"/>
                    
                    <button name="%(action_return_approval_wizard)d" 
                            string="Approve (L1)" 
                            type="action" 
                            class="oe_highlight"
                            invisible="not gm_can_approve_level_1"
                            groups="dev_pos.group_return_approval_level_1"
                            context="{'default_action': 'approve', 'default_level': 1}"/>
                    
                    <button name="%(action_return_approval_wizard)d" 
                            string="Reject" 
                            type="action"
                            invisible="gm_status not in ('waiting_approval_1', 'waiting_approval_2')"
                            groups="dev_pos.group_return_approval_level_1,dev_pos.group_return_approval_level_2"
                            context="{'default_action': 'reject'}"/>
                    
                    <button name="action_reset_to_waiting" 
                            string="Reset to Waiting" 
                            type="object"
                            invisible="gm_status != 'rejected'"/>
                    
                    <!-- Updated statusbar without 'draft' status -->
                    <field name="gm_status" widget="statusbar" 
                           statusbar_visible="waiting_approval_1,waiting_approval_2,approved"/>
                </header>
                
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_original_order"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-shopping-cart">
                            <span class="o_stat_text">Original Order</span>
                        </button>
                        <button name="action_view_refund_order"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-undo"
                                invisible="not gm_refund_order_id">
                            <span class="o_stat_text">Refund Order</span>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="gm_doc_num" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Request Information">
                            <field name="company_id" groups="base.group_multi_company" 
                                   options="{'no_create': True}"
                                   readonly="1"/>
                            <field name="gm_requested_by" readonly="1"/>
                            <field name="gm_creation_date" readonly="1"/>
                            <field name="gm_pos_order_id" readonly="1"/>
                            <field name="gm_current_level" invisible="1"/>
                            <field name="gm_can_approve_level_1" invisible="1"/>
                            <field name="gm_can_approve_level_2" invisible="1"/>
                        </group>
                        <group string="Approval Information">
                            <field name="gm_approval_by" widget="many2many_tags" readonly="1"/>
                            <field name="gm_approval_date" readonly="1"/>
                            <field name="gm_refund_order_id" readonly="1" invisible="not gm_refund_order_id"/>
                            <field name="gm_total_amount" widget="monetary" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Return Items" name="lines">
                            <field name="gm_currency_id" invisible="1"/>
                            <field name="gm_line_ids" readonly="1">
                                <tree string="Return Lines">
                                    <field name="gm_product_id"/>
                                    <field name="gm_description"/>
                                    <field name="gm_qty"/>
                                    <field name="gm_uom_id"/>
                                    <field name="gm_price_unit" widget="monetary" options="{'currency_field': 'parent.gm_currency_id'}"/>
                                    <field name="gm_subtotal" widget="monetary" options="{'currency_field': 'parent.gm_currency_id'}"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="return_total">
                                <field name="gm_total_amount" widget="monetary" 
                                       class="oe_subtotal_footer_separator"
                                       options="{'currency_field': 'gm_currency_id'}"
                                       readonly="1"/>
                            </group>
                            <div class="oe_clear"/>
                        </page>
                        
                        <page string="Return Reason" name="return_reason">
                            <field name="gm_return_reason" nolabel="1" placeholder="Please describe the reason for return..." readonly="1"/>
                        </page>
                        
                        <page string="Approval History" name="history">
                            <field name="gm_history_ids" readonly="1">
                                <tree string="Approval History" decoration-success="gm_action == 'approved'" decoration-danger="gm_action == 'rejected'">
                                    <field name="gm_level" string="Level"/>
                                    <field name="gm_user_id" widget="many2one_avatar_user"/>
                                    <field name="gm_action" widget="badge" decoration-success="gm_action == 'approved'" decoration-danger="gm_action == 'rejected'"/>
                                    <field name="gm_action_date"/>
                                    <field name="gm_notes"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_return_approval_kanban" model="ir.ui.view">
        <field name="name">return.approval.kanban</field>
        <field name="model">return.approval</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="gm_doc_num"/>
                <field name="gm_status"/>
                <field name="gm_requested_by"/>
                <field name="gm_creation_date"/>
                <field name="gm_total_amount"/>
                <field name="gm_currency_id"/>
                <field name="company_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top mb-2">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="gm_doc_num"/>
                                    </strong>
                                    <span class="text-muted" groups="base.group_multi_company">
                                        <field name="company_id"/>
                                    </span>
                                </div>
                                <field name="gm_status" widget="label_selection" 
                                       options="{'classes': {
                                           'waiting_approval_1': 'warning',
                                           'waiting_approval_2': 'info',
                                           'approved': 'success',
                                           'rejected': 'danger'
                                       }}"/>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="gm_requested_by" widget="many2one_avatar_user"/>
                                <div class="text-muted">
                                    <i class="fa fa-clock-o"/> <field name="gm_creation_date"/>
                                </div>
                                <div class="mt-2">
                                    <strong>Amount: </strong>
                                    <field name="gm_total_amount" widget="monetary" options="{'currency_field': 'gm_currency_id'}"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_return_approval_search" model="ir.ui.view">
        <field name="name">return.approval.search</field>
        <field name="model">return.approval</field>
        <field name="arch" type="xml">
            <search string="Return Approvals">
                <field name="gm_doc_num"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="gm_requested_by"/>
                <field name="gm_pos_order_id"/>
                <field name="gm_status"/>
                
                <filter string="My Requests" name="my_requests" 
                        domain="[('gm_requested_by', '=', uid)]"/>
                <filter string="Pending My Approval (L1)" name="pending_l1" 
                        domain="[('gm_status', '=', 'waiting_approval_1')]"/>
                <filter string="Pending My Approval (L2)" name="pending_l2" 
                        domain="[('gm_status', '=', 'waiting_approval_2')]"/>
                
                <separator/>
                <!-- Removed Draft filter since there's no draft status anymore -->
                <filter string="Waiting Approval" name="waiting" 
                        domain="[('gm_status', 'in', ('waiting_approval_1', 'waiting_approval_2'))]"/>
                <filter string="Approved" name="approved" domain="[('gm_status', '=', 'approved')]"/>
                <filter string="Rejected" name="rejected" domain="[('gm_status', '=', 'rejected')]"/>
                
                <separator/>
                <filter string="Creation Date" name="creation_date" date="gm_creation_date"/>
                
                <group expand="0" string="Group By">
                    <filter string="Company" name="group_company" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'gm_status'}"/>
                    <filter string="Requested By" name="group_requested" context="{'group_by': 'gm_requested_by'}"/>
                    <filter string="Creation Date" name="group_creation" context="{'group_by': 'gm_creation_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_return_approval" model="ir.actions.act_window">
        <field name="name">Return Approvals</field>
        <field name="res_model">return.approval</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="view_return_approval_search"/>
        <field name="context">{'search_default_waiting': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Return Approvals Found
            </p>
            <p>
                Return approvals are created from POS orders when cashiers request refunds.
                They are automatically submitted for approval upon creation.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_return_approval_root"
              name="Return Approvals"
              parent="point_of_sale.menu_point_root"
              sequence="10"/>
    
    <menuitem id="menu_return_approval"
              name="Return Approvals"
              parent="menu_return_approval_root"
              action="action_return_approval"
              sequence="1"/>

</odoo>