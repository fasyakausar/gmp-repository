              <p class="text-center">[ <t t-esc="date_from"/> - <t t-esc="date_to"/> ]</p>

              <table class="table table-bordered table-sm">
                <thead class="table-secondary">
                  <tr>
                    <th style="width: 5%;">No</th>
                    <th style="width: 15%;">Nomor Faktur</th>
                    <th style="width: 10%;">Nomor Order</th>
                    <th style="width: 10%;">Session</th>
                    <th style="width: 5%;">Lokasi</th>
                    <th style="width: 15%;">Tanggal</th>
                    <th style="width: 20%;">Customer</th>
                    <th style="width: 8%;">Quantity</th>
                    <th style="width: 12%;">Nominal</th>
                  </tr>
                </thead>
                <tbody>
                  <t t-set="counter" t-value="1"/>
                  <t t-foreach="orders" t-as="order">
                    <tr>
