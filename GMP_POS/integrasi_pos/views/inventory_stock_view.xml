<odoo>
  <data>
    <record id="view_inventory_stock_tree" model="ir.ui.view">
        <field name="name">inventory.stock.tree</field>
        <field name="model">inventory.stock</field>
        <field name="type">tree</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <tree string="Inventory Stock">
                <field name="inventory_date"/>
                <field name="doc_num"/>
                <field name="location_id"/>
                <field name="company_id"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <record id="view_barcode_scanner_wizard" model="ir.ui.view">
        <field name="name">barcode.scanner.wizard.form</field>
        <field name="model">barcode.scanner.wizard</field>
        <field name="arch" type="xml">
            <form string="ðŸ“¦ Barcode Scanner">
            <sheet>
                <group>
                <field name="inventory_stock_id" invisible="1"/>
                <field name="scanner_placeholder" widget="barcode_scanner_widget" readonly="1" />
                </group>
                <footer>
                <button string="Close" type="object" name="action_close" class="btn-secondary"/>
                </footer>
            </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_invetory_stock_form">
        <field name="name">inventory.stock.form</field>
        <field name="model">inventory.stock</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_start_counting" string="Finish Counting" type="object" 
                            class="oe_highlight" invisible="state in ('draft', 'counted', 'closed')"/>
                    <button name="action_in_progress" string="In Progress" type="object" 
                            class="oe_highlight" invisible="state in ('in_progress', 'counted', 'closed')"/>
                    <button name="action_closed" string="Closed" type="object" 
                            class="oe_highlight" invisible="state in ('draft', 'in_progress', 'closed')"/>
                    <button name="open_barcode_scanner" string="ðŸ“· Scan" type="object"
                            class="oe_highlight" invisible="state in ('counted', 'closed')"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,counted,closed"/>
                </header>
                <sheet>
                <div class="oe_title">
                    <h1>
                        <field name="doc_num" readonly="1"/>
                    </h1>
                </div>
                    <group>
                        <group>
                            <field name="warehouse_id" readonly="state in ('counted', 'closed')"/>
                            <field name="location_id" readonly="state in ('counted', 'closed')"/>
                            <field name="inventory_date" readonly="state != 'draft'"/>
                            <field name="is_integrated"/>
                        </group>
                        <group>
                            <field name="company_id" readonly="state in ('counted', 'closed')"/>
                            <field name="create_date" readonly="1"/>
                            <field name="vit_notes"/>
                            <field name="barcode_input" default_focus="1" invisible="state in ('counted', 'closed')"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Inventory Counting Lines">
                            <field name="inventory_counting_ids">
                            <tree editable="bottom" export="1">
                                <field name="product_id" readonly="state in ('counted', 'closed')"/>
                                <field name="location_id" readonly="state in ('counted', 'closed')" optional="hide"/>
                                <field name="lot_id" readonly="state in ('counted', 'closed')" optional="hide"/>
                                <field name="inventory_date" readonly="state in ('counted', 'closed')" optional="hide"/>
                                <field name="qty_hand" readonly="1" invisible="state in ('draft', 'in_progress')"/>
                                <field name="counted_qty" readonly="state in ('counted', 'closed')"/>
                                <field name="difference_qty" invisible="state in ('draft', 'in_progress')"/>
                                <field name="uom_id" readonly="state in ('counted', 'closed')"/>
                                <field name="state" optional="hide"/>
                            </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- actions opening views on models -->
    <record id="action_inventory_stock" model="ir.actions.act_window">
        <field name="name">Inventory Counting</field>
        <field name="res_model">inventory.stock</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menambahkan menu di bawah Inventory -->
    <menuitem 
        id="menu_inventory_stock"
        name="Inventory Counting"
        action="action_inventory_stock"
        parent="stock.menu_stock_adjustments"
        sequence="3"/>
  </data>
</odoo>