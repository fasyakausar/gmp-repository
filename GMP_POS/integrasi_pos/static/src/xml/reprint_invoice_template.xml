<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    
    <!-- Reprint Receipt Screen with Search -->
    <t t-name="integrasi_pos.ReprintReceiptScreenExtended" owl="1">
        <div class="reprint-screen">
            <div class="screen-content">
                <!-- Header -->
                <div class="reprint-header">
                    <h2>Reprint Receipt</h2>
                    <p>Masukkan nomor receipt untuk mencetak ulang</p>
                </div>

                <!-- Search Input -->
                <div class="search-container" style="padding: 20px;">
                    <div style="display: flex; gap: 10px; align-items: center;">
                        <input 
                            type="text" 
                            class="search-input"
                            style="flex: 1; padding: 12px; font-size: 16px; border: 2px solid #ccc; border-radius: 4px;"
                            placeholder="Contoh: Order 00076-684-0004 atau S01/0683"
                            t-model="state.searchQuery"
                            t-on-keyup.enter="onSearchAndPrint"
                        />
                        <button 
                            class="btn btn-primary" 
                            style="padding: 12px 24px; font-size: 16px;"
                            t-on-click="onSearchAndPrint">
                            <i class="fa fa-search"/> Cari &amp; Print
                        </button>
                    </div>
                </div>

                <!-- Recent Orders List -->
                <div class="orders-list" style="padding: 20px;">
                    <h3 style="margin-bottom: 15px;">Order Terakhir (Sudah Di-Print)</h3>
                    
                    <t t-if="state.recentOrders.length > 0">
                        <div class="orders-grid" style="display: grid; gap: 10px;">
                            <t t-foreach="state.recentOrders" t-as="order" t-key="order.id">
                                <div 
                                    class="order-card" 
                                    style="border: 2px solid #ddd; border-radius: 8px; padding: 15px; cursor: pointer; transition: all 0.2s;"
                                    t-on-click="() => this.onSelectOrder(order)">
                                    <div style="display: flex; justify-content: space-between; align-items: center;">
                                        <div>
                                            <div style="font-weight: bold; font-size: 16px; color: #333;">
                                                <t t-esc="order.pos_reference"/>
                                            </div>
                                            <div style="color: #666; font-size: 14px; margin-top: 4px;">
                                                <t t-esc="formatDateTime(order.date_order)"/>
                                            </div>
                                            <div style="color: #666; font-size: 14px;">
                                                Customer: <t t-esc="order.partner_id ? order.partner_id[1] : 'Walk-in'"/>
                                            </div>
                                        </div>
                                        <div style="text-align: right;">
                                            <div style="font-weight: bold; font-size: 18px; color: #7c3aed;">
                                                <t t-esc="formatCurrency(order.amount_total)"/>
                                            </div>
                                            <div style="margin-top: 8px;">
                                                <button 
                                                    class="btn btn-sm btn-secondary"
                                                    t-on-click.stop="() => this.onPrintOrder(order)">
                                                    <i class="fa fa-print"/> Print
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </t>
                    
                    <t t-else="">
                        <div style="text-align: center; padding: 40px; color: #999;">
                            <i class="fa fa-inbox" style="font-size: 48px; margin-bottom: 15px;"/>
                            <p>Tidak ada order yang sudah di-print</p>
                        </div>
                    </t>
                </div>
            </div>
        </div>
    </t>

</templates>