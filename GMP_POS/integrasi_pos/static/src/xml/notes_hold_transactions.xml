<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <!-- Popup input Notes Hold -->
    <t t-name="integrasi_pos.HoldNotesPopup" owl="1">
        <div class="popup popup-text">
            <main class="body">
                <div class="popup-title">
                    <h3><t t-esc="props.title or 'Catatan Transaksi'"/></h3>
                </div>
                <div class="popup-body">
                    <t t-if="props.body">
                        <p><t t-esc="props.body"/></p>
                    </t>
                    <input type="text"
                        t-ref="input"
                        t-model="state.input"
                        placeholder="Masukkan catatan..."
                        class="form-control text-center fs-4"
                    />
                </div>
                <div class="button-container d-flex justify-content-between mt-3">
                    <button class="btn btn-success fw-bold" t-on-click="confirm">OK</button>
                    <button class="btn btn-danger fw-bold" t-on-click="cancel">Batal</button>
                </div>
            </main>
        </div>
    </t>
</templates>
